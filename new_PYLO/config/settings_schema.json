[
  {
    "name": "theme_info",
    "theme_name": "Pylo",
    "theme_version": "1.0.0",
    "theme_author": "Prathamesh Yamgarne",
    "theme_documentation_url": "https://prathameshyamgarne.com",
    "theme_support_url": "https://prathameshyamgarne.com"
  },
  {
    "name": "t:settings_schema.logo.name",
    "settings": [
      { "type": "image_picker", "id": "logo", "label": "t:settings_schema.logo.settings.logo_image.label" },
      { "type": "range", "id": "logo_width", "min": 80, "max": 300, "step": 20, "default": 100, "unit": "px", "label": "t:settings_schema.logo.settings.logo_width.label" },
      { "type": "image_picker", "id": "pylo_favicon", "label": "t:settings_schema.logo.settings.favicon.label", "info": "t:settings_schema.logo.settings.favicon.info" }
    ]
  },
  {
    "name": "t:settings_schema.typography.name",
    "settings": [
      { "type": "header", "content": "t:settings_schema.typography.settings.main__header__1.content" },
      { "type": "font_picker", "id": "main_header_font", "default": "assistant_n4", "label": "t:settings_schema.typography.settings.main_header_font.label" },
      { "type": "range", "id": "heading_size", "min": 10, "max": 100, "step": 1, "unit": "rem", "label": "t:settings_schema.typography.settings.main_heading_size.label", "default": 15 },
      { "type": "header", "content": "t:settings_schema.typography.settings.main__header__2.content" },
      { "type": "font_picker", "id": "main_body_font", "default": "assistant_n4", "label": "t:settings_schema.typography.settings.main_body_font.label" },
      { "type": "range", "id": "body_size", "min": 10, "max": 100, "step": 1, "unit": "rem", "label": "t:settings_schema.typography.settings.main_body_size.label", "default": 15 }
    ]
  },
  {
    "name": "t:settings_schema.layout.name",
    "settings": [
      { "type": "range", "id": "container_width", "min": 0, "max": 160, "step": 10, "default": 120, "unit": "rem", "label": "t:settings_schema.layout.settings.container_width.label" },
      { "type": "select", "id": "theme_layout", "label": "t:settings_schema.layout.settings.theme_layout.label", "options": [ { "value": "boxed", "label": "t:settings_schema.layout.settings.theme_layout.boxed" }, { "value": "full_width", "label": "t:settings_schema.layout.settings.theme_layout.full_width" } ], "default": "full_width" },
      { "type": "range", "id": "section_spacing", "label": "t:settings_schema.layout.settings.section_spacing.label", "min": 0, "max": 100, "step": 4, "default": 32 }
    ]
  },
  {
    "name": "t:settings_schema.colors.name",
    "settings": [
      {
        "type": "color_scheme_group",
        "id": "color_schemes",
        "definition": [
          { "type": "color", "id": "background_color", "label": "t:settings_schema.colors.settings.background.label", "default": "#FFFFFF" },
          { "type": "color_background", "id": "background_gradient_color", "label": "t:settings_schema.colors.settings.background_gradient.label", "info": "t:settings_schema.colors.settings.background_gradient.info" },
          { "type": "color", "id": "text_color", "label": "t:settings_schema.colors.settings.text.label", "default": "#121212" },
          { "type": "color", "id": "button_color", "label": "t:settings_schema.colors.settings.button_background.label", "default": "#121212" },
          { "type": "color", "id": "button_label_color", "label": "t:settings_schema.colors.settings.button_label.label", "default": "#FFFFFF" },
          { "type": "color", "id": "secondary_button_label_color", "label": "t:settings_schema.colors.settings.secondary_button_label.label", "default": "#121212" },
          { "type": "color", "id": "shadow_color", "label": "t:settings_schema.colors.settings.shadow.label", "default": "#121212" }
        ],
        "role": {
          "text": "text_color",
          "background": { "solid": "background_color", "gradient": "background_gradient_color" },
          "links": "secondary_button_label_color",
          "icons": "text_color",
          "primary_button": "button_color",
          "on_primary_button": "button_label_color",
          "primary_button_border": "button_color",
          "secondary_button": "background_color",
          "on_secondary_button": "secondary_button_label_color",
          "secondary_button_border": "secondary_button_label_color"
        }
      }
    ]
  },
  {
    "name": "t:settings_schema.buttons.name",
    "settings": [
      { "type": "color", "id": "button_color_alt", "label": "t:settings_schema.buttons.settings.button_color.label", "default": "#1a1a1a" },
      { "type": "color", "id": "button_text_color", "label": "t:settings_schema.buttons.settings.button_text_color.label", "default": "#ffffff" },
      { "type": "select", "id": "button_shape", "label": "t:settings_schema.buttons.settings.button_shape.label", "options": [ { "value": "rounded", "label": "t:settings_schema.buttons.settings.button_shape.rounded" }, { "value": "square", "label": "t:settings_schema.buttons.settings.button_shape.square" } ], "default": "rounded" }
    ]
  },
  {
    "name": "t:settings_schema.forms.name",
    "settings": [
      { "type": "color", "id": "input_background", "label": "t:settings_schema.forms.settings.input_background.label", "default": "#ffffff" },
      { "type": "color", "id": "input_border", "label": "t:settings_schema.forms.settings.input_border.label", "default": "#e5e5e5" },
      { "type": "color", "id": "input_text", "label": "t:settings_schema.forms.settings.input_text.label", "default": "#222222" }
    ]
  },
  {
    "name": "t:settings_schema.media.name",
    "settings": [
      { "type": "image_picker", "id": "default_product_image", "label": "t:settings_schema.media.settings.default_product_image.label" },
      { "type": "image_picker", "id": "default_collection_image", "label": "t:settings_schema.media.settings.default_collection_image.label" }
    ]
  },
  {
    "name": "t:settings_schema.social.name",
    "settings": [
      { "type": "text", "id": "facebook_url", "label": "t:settings_schema.social.settings.facebook_url.label" },
      { "type": "text", "id": "instagram_url", "label": "t:settings_schema.social.settings.instagram_url.label" },
      { "type": "text", "id": "twitter_url", "label": "t:settings_schema.social.settings.twitter_url.label" },
      { "type": "text", "id": "youtube_url", "label": "t:settings_schema.social.settings.youtube_url.label" }
    ]
  },
  {
    "name": "t:settings_schema.favicon_branding.name",
    "settings": [
      { "type": "image_picker", "id": "favicon", "label": "t:settings_schema.favicon_branding.settings.favicon.label" },
      { "type": "image_picker", "id": "favicon_logo", "label": "t:settings_schema.favicon_branding.settings.logo.label" }
    ]
  },
  {
    "name": "t:settings_schema.product_card.name",
    "settings": [
      { "type": "select", "id": "product_card_style", "label": "t:settings_schema.product_card.settings.product_card_style.label", "options": [ { "value": "default", "label": "t:settings_schema.product_card.settings.product_card_style.default" }, { "value": "minimal", "label": "t:settings_schema.product_card.settings.product_card_style.minimal" }, { "value": "hover", "label": "t:settings_schema.product_card.settings.product_card_style.hover" } ], "default": "default" },
      { "type": "checkbox", "id": "show_product_rating", "label": "t:settings_schema.product_card.settings.show_product_rating.label", "default": true },
      { "type": "checkbox", "id": "show_quick_add", "label": "t:settings_schema.product_card.settings.show_quick_add.label", "default": true }
    ]
  },
  {
    "name": "t:settings_schema.checkout.name",
    "settings": [
      { "type": "color", "id": "checkout_background", "label": "t:settings_schema.checkout.settings.checkout_background.label", "default": "#ffffff" },
      { "type": "color", "id": "checkout_button", "label": "t:settings_schema.checkout.settings.checkout_button.label", "default": "#1a1a1a" }
    ]
  }
]
