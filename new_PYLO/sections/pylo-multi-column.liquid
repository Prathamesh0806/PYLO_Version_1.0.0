{%- comment -%}
PYLO Multi-Column Section
Now uses only global color scheme variables for all colors. All static color settings removed. Styling is fully dynamic and merchant-editable via theme settings. See theme.liquid for color scheme variables.
Modular CSS for this section is loaded below.
{%- endcomment -%}

{{ 'section-pylo-multi-column.css' | asset_url | stylesheet_tag }}

<section class="pylo-multi-column">
  <div class="pylo-multi-column__wrapper">
    {%- for block in section.blocks -%}
      <div class="pylo-multi-column__column">
        {%- if block.settings.icon != blank -%}
          <div class="pylo-multi-column__icon">{{ block.settings.icon }}</div>
        {%- endif -%}
        <h3 class="pylo-multi-column__heading">{{ block.settings.heading }}</h3>
        <div class="pylo-multi-column__text">{{ block.settings.text }}</div>
      </div>
    {%- endfor -%}
  </div>
</section>

{% schema %}
{
  "name": "PYLO Multi-Column",
  "settings": [
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "settings": [
        { "type": "text", "id": "icon", "label": "Icon (SVG or emoji)" },
        { "type": "text", "id": "heading", "label": "Heading" },
        { "type": "textarea", "id": "text", "label": "Text" }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    { "name": "Multi-Column", "blocks": [ { "type": "column" }, { "type": "column" }, { "type": "column" } ] }
  ]
}
{% endschema %} 