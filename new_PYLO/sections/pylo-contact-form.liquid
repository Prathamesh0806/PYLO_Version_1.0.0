{%- comment -%}
PYLO Contact Form Section
Now uses only global color scheme variables for all colors. All static color settings removed. Styling is fully dynamic and merchant-editable via theme settings. See theme.liquid for color scheme variables.
Modular CSS for this section is loaded below.
{%- endcomment -%}

{{ 'section-pylo-contact-form.css' | asset_url | stylesheet_tag }}

<section class="pylo-contact-form">
  <h2 class="pylo-contact-form__heading">{{ section.settings.heading }}</h2>
  <div class="pylo-contact-form__text">{{ section.settings.text }}</div>
  <form method="post" action="/contact#contact_form" id="contact_form" accept-charset="UTF-8" class="pylo-contact-form__form">
    <input type="hidden" name="form_type" value="contact" />
    <input type="hidden" name="utf8" value="âœ“" />
    <div class="pylo-contact-form__fields">
      <input type="text" name="contact[name]" placeholder="Your name" required />
      <input type="email" name="contact[email]" placeholder="Your email" required />
      <textarea name="contact[body]" placeholder="Your message" required></textarea>
    </div>
    <button type="submit" class="pylo-contact-form__submit">Send</button>
  </form>
</section>

{% schema %}
{
  "name": "PYLO Contact Form",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Contact Us" },
    { "type": "textarea", "id": "text", "label": "Text", "default": "We'd love to hear from you!" }
  ],
  "presets": [
    { "name": "Contact Form" }
  ]
}
{% endschema %} 