{%- comment -%}
PYLO Image Banner Section
Now uses only global color scheme variables for all colors.
{%- endcomment -%}

<section class="pylo-image-banner">
  <div class="pylo-image-banner__media">
    {%- if section.settings.image != blank -%}
      <img src="{{ section.settings.image | image_url }}" alt="{{ section.settings.heading }}" class="pylo-image-banner__img" />
    {%- endif -%}
    {%- if section.settings.overlay -%}
      <div class="pylo-image-banner__overlay" style="background: var(--color-shadow, #000); opacity: {{ section.settings.overlay_opacity }};"></div>
    {%- endif -%}
  </div>
  <div class="pylo-image-banner__content">
    <h2 class="pylo-image-banner__heading">{{ section.settings.heading }}</h2>
    <p class="pylo-image-banner__subheading">{{ section.settings.subheading }}</p>
    {%- if section.settings.button_label != blank and section.settings.button_url != blank -%}
      <a href="{{ section.settings.button_url }}" class="pylo-image-banner__button">{{ section.settings.button_label }}</a>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "PYLO Image Banner",
  "settings": [
    { "type": "image_picker", "id": "image", "label": "Banner image" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "Welcome to PYLO" },
    { "type": "text", "id": "subheading", "label": "Subheading", "default": "A modern Shopify theme" },
    { "type": "text", "id": "button_label", "label": "Button label" },
    { "type": "url", "id": "button_url", "label": "Button URL" },
    { "type": "checkbox", "id": "overlay", "label": "Show overlay", "default": false },
    { "type": "range", "id": "overlay_opacity", "label": "Overlay opacity", "min": 0, "max": 1, "step": 0.1, "default": 0.3 }
  ],
  "presets": [
    { "name": "Image Banner" }
  ]
}
{% endschema %} 