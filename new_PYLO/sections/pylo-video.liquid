{%- comment -%}
PYLO Video Section
Now uses only global color scheme variables for all colors. All static color settings removed. Styling is fully dynamic and merchant-editable via theme settings. See theme.liquid for color scheme variables.
Modular CSS for this section is loaded below.
{%- endcomment -%}

{{ 'section-pylo-video.css' | asset_url | stylesheet_tag }}

<section class="pylo-video">
  <div class="pylo-video__media">
    {%- if section.settings.video_url != blank -%}
      <video class="pylo-video__element" controls poster="{{ section.settings.poster | image_url }}">
        <source src="{{ section.settings.video_url }}" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    {%- endif -%}
  </div>
  <div class="pylo-video__content">
    <h2 class="pylo-video__heading">{{ section.settings.heading }}</h2>
    <p class="pylo-video__subheading">{{ section.settings.subheading }}</p>
    {%- if section.settings.button_label != blank and section.settings.button_url != blank -%}
      <a href="{{ section.settings.button_url }}" class="pylo-video__button">{{ section.settings.button_label }}</a>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "PYLO Video",
  "settings": [
    { "type": "url", "id": "video_url", "label": "Video URL" },
    { "type": "image_picker", "id": "poster", "label": "Poster image" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "Watch Our Story" },
    { "type": "text", "id": "subheading", "label": "Subheading", "default": "Discover what makes us unique." },
    { "type": "text", "id": "button_label", "label": "Button label" },
    { "type": "url", "id": "button_url", "label": "Button URL" }
  ],
  "presets": [
    { "name": "Video" }
  ]
}
{% endschema %} 