{%- comment -%}
PYLO Announcement Bar Section
Now uses only global color scheme variables for all colors. All static color settings removed. Styling is fully dynamic and merchant-editable via theme settings. See theme.liquid for color scheme variables.
Modular CSS for this section is loaded below.
{%- endcomment -%}

{{ 'section-pylo-announcement-bar.css' | asset_url | stylesheet_tag }}

{%- if section.settings.text != blank -%}
  <section class="pylo-announcement-bar">
    <div class="pylo-announcement-bar__content">
      {%- if section.settings.link != blank -%}
        <a href="{{ section.settings.link }}" class="pylo-announcement-bar__link">{{ section.settings.text }}</a>
      {%- else -%}
        <span class="pylo-announcement-bar__text">{{ section.settings.text }}</span>
      {%- endif -%}
      {%- if section.settings.dismissible -%}
        <button class="pylo-announcement-bar__close" type="button" aria-label="Close" onclick="this.parentElement.parentElement.style.display='none';">&times;</button>
      {%- endif -%}
    </div>
  </section>
{%- endif -%}

{% schema %}
{
  "name": "PYLO Announcement Bar",
  "settings": [
    { "type": "text", "id": "text", "label": "Announcement text", "default": "Free shipping on orders over $50!" },
    { "type": "url", "id": "link", "label": "Link (optional)" },
    { "type": "checkbox", "id": "dismissible", "label": "Allow dismissing bar", "default": true }
  ],
  "presets": [
    { "name": "Announcement Bar" }
  ]
}
{% endschema %} 