{%- comment -%}
PYLO Rich Text Section
Now uses only global color scheme variables for all colors. All static color settings removed. Styling is fully dynamic and merchant-editable via theme settings. See theme.liquid for color scheme variables.
Modular CSS for this section is loaded below.
{%- endcomment -%}

{{ 'section-pylo-rich-text.css' | asset_url | stylesheet_tag }}

<section class="pylo-rich-text" style="background: var(--color-background); color: var(--color-foreground); text-align: {{ section.settings.alignment }};">
  <h2 class="pylo-rich-text__heading">{{ section.settings.heading }}</h2>
  <div class="pylo-rich-text__text">{{ section.settings.text }}</div>
</section>

{% schema %}
{
  "name": "PYLO Rich Text",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "About PYLO" },
    { "type": "textarea", "id": "text", "label": "Text", "default": "PYLO is a modern, modular Shopify theme." },
    { "type": "select", "id": "alignment", "label": "Text alignment", "options": [ { "value": "left", "label": "Left" }, { "value": "center", "label": "Center" }, { "value": "right", "label": "Right" } ], "default": "center" }
  ],
  "presets": [
    { "name": "Rich Text" }
  ]
}
{% endschema %} 